{
  "datamasking": {
    "method": "in-place",
    "input": {
      "dbname": "WWI"
    },
    "output": {
      "dbname": "WWI_Masked1"
    },
    "masked-tables": [
      {
        "schema": "Sales",
        "name": "Customers",
        "masked-columns": [
          {
            "name": "CustomerName",
            "maskType": "shuffle"
          },
          {
            "name": "PhoneNumber",
            "maskType": "stringComposite",
            "pattern": "\\((\\d){3}) (\\d){3}-(\\d){4}"
          },
          {
            "name": "FaxNumber",
            "maskType": "stringComposite",
            "pattern": "\\((\\d){3}) (\\d){3}-(\\d){4}"
          },
          {
            "name": "DeliveryAddressLine1",
            "maskType": "stringComposite",
            "pattern": "(\\d){ 3,6} \\L(\\l){4,8} (Street|Lane|Avenue|Road)"
          },
          {
            "name": "DeliveryAddressLine2",
            "maskType": "stringComposite",
            "pattern": "(\\d){ 3,6} \\L(\\l){4,8} (Street|Lane|Avenue|Road)"
          },
          {
            "name": "DeliveryPostalCode",
            "maskType": "shuffle"
          },
          {
            "name": "PostalAddressLine1",
            "maskType": "stringComposite",
            "pattern": "(\\d){ 3,6} \\L(\\l){4,8} (Street|Lane|Avenue|Road)"
          },
          {
            "name": "PostalAddressLine2",
            "maskType": "stringComposite",
            "pattern": "(\\d){ 3,6} \\L(\\l){4,8} (Street|Lane|Avenue|Road)"
          },
          {
            "name": "PostalPostalCode",
            "maskType": "shuffle"
          }
        ]
      }
    ]
  }
}