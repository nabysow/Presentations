<?xml version="1.0" encoding="UTF-8"?>
<datamasking method="in-place">
  <input dbname="WWI" />
  <output dbname="WWI_Masked1" />
  <masked-tables>
    <table schema="Sales" name="Customers">
      <column name="CustomerName" maskType="shuffle" />
      <column name="PhoneNumber" maskType="stringComposite">
        <pattern>\((\d){3}) (\d){3}-(\d){4}</pattern>
      </column>
      <column name="FaxNumber" maskType="stringComposite">
        <pattern>\((\d){3}) (\d){3}-(\d){4}</pattern>
      </column>
      <column name="DeliveryAddressLine1" maskType="stringComposite">
        <pattern>(\d){ 3,6} \L(\l){4,8} (Street|Lane|Avenue|Road)</pattern>
      </column>
      <column name="DeliveryAddressLine2" maskType="stringComposite">
        <pattern>(\d){ 3,6} \L(\l){4,8} (Street|Lane|Avenue|Road)</pattern>
      </column>
      <column name="DeliveryPostalCode" maskType="shuffle" />
      <column name="PostalAddressLine1" maskType="stringComposite">
        <pattern>(\d){ 3,6} \L(\l){4,8} (Street|Lane|Avenue|Road)</pattern>
      </column>
      <column name="PostalAddressLine2" maskType="stringComposite">
        <pattern>(\d){ 3,6} \L(\l){4,8} (Street|Lane|Avenue|Road)</pattern>
      </column>
      <column name="PostalPostalCode" maskType="shuffle" />
    </table>
  </masked-tables>
</datamasking>